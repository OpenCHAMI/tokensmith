{
  "version": "1.0.0",
  "default_policy": {
    "scopes": ["read"],
    "audiences": ["default-service"],
    "permissions": ["read:basic"],
    "token_lifetime": "30m"
  },
  "roles": {
    "admin": {
      "name": "Administrator",
      "description": "Full administrative access to all OpenCHAMI services",
      "scopes": ["read", "write", "admin", "manage"],
      "audiences": ["smd", "bss", "cloud-init", "admin-service"],
      "permissions": [
        "read:all",
        "write:all",
        "admin:all",
        "manage:users",
        "manage:services",
        "manage:clusters"
      ],
      "token_lifetime": "2h",
      "additional_claims": {
        "role": "admin",
        "level": "high",
        "capabilities": ["full_access"]
      }
    },
    "operator": {
      "name": "System Operator",
      "description": "System operation and monitoring access",
      "scopes": ["read", "write", "monitor"],
      "audiences": ["smd", "bss", "monitoring", "operator-service"],
      "permissions": [
        "read:system",
        "write:system",
        "monitor:all",
        "manage:services",
        "view:logs"
      ],
      "token_lifetime": "1h",
      "additional_claims": {
        "role": "operator",
        "level": "medium",
        "capabilities": ["system_access", "monitoring"]
      }
    },
    "user": {
      "name": "Regular User",
      "description": "Basic user access to OpenCHAMI services",
      "scopes": ["read"],
      "audiences": ["smd", "bss", "user-service"],
      "permissions": [
        "read:basic",
        "read:own_data"
      ],
      "token_lifetime": "1h",
      "additional_claims": {
        "role": "user",
        "level": "low",
        "capabilities": ["basic_access"]
      }
    },
    "service": {
      "name": "Service Account",
      "description": "Service-to-service authentication",
      "scopes": ["read", "write"],
      "audiences": ["smd", "bss", "cloud-init"],
      "permissions": [
        "read:service_data",
        "write:service_data"
      ],
      "token_lifetime": "24h",
      "additional_claims": {
        "role": "service",
        "level": "medium",
        "capabilities": ["service_access"]
      }
    }
  },
  "user_role_mappings": {
    "adminuser": ["admin"],
    "operatoruser": ["operator"],
    "regularuser": ["user"],
    "poweruser": ["user", "operator"],
    "service-account": ["service"]
  },
  "group_role_mappings": {
    "admins": ["admin"],
    "operators": ["operator"],
    "users": ["user"],
    "power-users": ["user", "operator"],
    "service-accounts": ["service"],
    "cluster-admins": ["admin"],
    "system-operators": ["operator"]
  }
}
